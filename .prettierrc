{
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "semi": false,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "trailingComma": "none",
  "bracketSameLine": true,
  "printWidth": 80,
  "endOfLine":"auto",
  "singleAttributePerLine": true,
  "overrides": [
    {
      "files": "**/*.html",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "**/*.component.html",
      "options": {
        "parser": "angular"
      }
    }
  ]
}
